  <script>
    function switchPlan(plan) {
      ['free','paid'].forEach(p => {
        document.getElementById('btn-' + p).classList.toggle('active', p === plan);
        document.getElementById('panel-' + p).classList.toggle('active', p === plan);
      });
    }
